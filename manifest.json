{
    "name": "Elecord",
    "version": "1.2.0",
    "manifest_version": 3,
    "description": "Collection of handy tools and tweaks for gamers across the web",
    "homepage_url": "https://github.com/elecordapp/elecord-extension",
    "permissions": [
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "*://*.steampowered.com/*",
        "*://www.pcgamer.com/*"
    ],
    "background": {
        "service_worker": "background/background.js",
        "scripts": ["background/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://www.pcgamer.com/*"],
            "js": ["scripts/pcgamer-content.js"],
            "css": ["styles/pcgamer-styles.css"]
        },
        {
            "matches": ["*://store.steampowered.com/*"],
            "css": ["styles/steam-app-styles.css"]
        },
        {
            "matches": [
                "*://store.steampowered.com/app/*/*/*",
                "*://store.steampowered.com/app/*/*"
            ],
            "js": ["scripts/steam-app-content.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/steam-logo.png",
                "assets/rosette-discount-check.svg",
                "assets/square-rounded-chevrons-up.svg",
                "assets/square-rounded-chevron-up.svg",
                "assets/square-rounded-minus.svg",
                "assets/square-rounded-chevron-down.svg",
                "assets/square-rounded-chevrons-down.svg",
                "assets/poo.svg",
                "assets/clock-hour-8.svg",
                "assets/calendar.svg",
                "components/steam/app/ele-details.html",
                "components/steam/app/ele-label.html",
                "components/steam/app/ele-review.html",
                "components/steam/app/ele-unreleased.html"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "action": {
        "default_title": "Elecord",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "icons": {
        "128": "icon.png"
    }
}

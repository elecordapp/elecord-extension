{
    "name": "Elecord",
    "version": "1.1.0",
    "manifest_version": 3,
    "description": "Collection of handy tools and tweaks for gamers across the web",
    "homepage_url": "https://github.com/elecordapp/elecord-extension",
    "permissions": [
        "contextMenus",
        "tabs",
        "storage",
        "activeTab"
    ],
    "action": {
        "default_title": "Elecord",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["*://www.pcgamer.com/*"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["steam-logo.png"],
            "matches": ["<all_urls>"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "icon.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}
